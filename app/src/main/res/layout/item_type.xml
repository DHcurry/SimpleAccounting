<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="type"
            type="io.github.skywalkerdarren.simpleaccounting.view_model.TypeItemViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/type_item"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:alpha="0">

        <android.support.v7.widget.CardView
            android:id="@+id/circle"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:onClick="@{() -> type.click()}"
            android:orientation="vertical"
            app:cardCornerRadius="30dp"
            app:cardElevation="3dp"

            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/type_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:contentDescription="@string/type_image"
                android:onClick="@{() -> type.click()}"
                android:src="@{type.res}"/>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/type_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:text="@{type.name}"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/circle"
            tools:text="护肤化妆" />

    </android.support.constraint.ConstraintLayout>
</layout>