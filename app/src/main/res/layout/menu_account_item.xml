<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="account"
            type="io.github.skywalkerdarren.simpleaccounting.view_model.AccountMenuItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:paddingTop="2dp">

        <android.support.v7.widget.CardView
            android:id="@+id/account_card_view"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@color/green500"
            android:elevation="0dp"
            android:padding="4dp"
            app:cardBackgroundColor="@{account.color}"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="2dp">

            <ImageView
                android:id="@+id/account_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@{account.img}"
                tools:ignore="ContentDescription" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/account_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@{account.name}"
            android:textSize="14sp"
            tools:ignore="HardcodedText"
            tools:text="支付宝" />

    </LinearLayout>
</layout>